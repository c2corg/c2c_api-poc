{
  "properties": {
    "type": { "const": "xreport" },
    "quality": { "$ref": "attributes/quality_types.json" },

    "event_activity": { "$ref": "attributes/event_activities.json" },
    "event_type": { "$ref": "attributes/event_types.json" },

    "associations": { "$ref": "entities/association_array.json" },
    "nb_participants": { "type": "integer" }, 
    "nb_impacted": { "type": "integer" },  
    "age": { "type": "integer" }, 
    "geometry": { "$ref": "entities/geometry.json" },
    
    "locales": {
      "patternProperties": {
        "(fr|en)": {
          "type": "object",
          "properties": {
            "lang": { "$ref": "attributes/default_langs.json" },
            "title": { "type": "string" },
            "summary": { "type": "string" },
            "place": { "type": "string" },
            "description": { "type": ["string", "null"] },
            "topic_id": { "type": ["integer", "null"] }
          },
          "required": ["lang", "title"],
          "additionalProperties": false
        }
      }
    }
  },
  "required": [
    "associations",
    "event_activity",
    "event_type",
    "locales",
    "quality",
    "type",
    "geometry"
  ],
  "additionalProperties": false
}
