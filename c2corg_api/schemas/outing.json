{
  "properties": {
    "activities": { "$ref": "entities/activity_array.json" },
    "associations": { "$ref": "associations/outing_associations.json" },
    "date_end": { "$ref": "entities/date.json" },
    "date_start": { "$ref": "entities/date.json" },
    "geometry": { "$ref": "geometries/outing_geometry.json" },
    "locales": { "$ref": "locales/outing_locales.json" },
    "quality": { "$ref": "attributes/quality_types.json" },

    "elevation_access": { "type": "integer" },
    "elevation_down_snow": { "type": "integer" },
    "elevation_max": { "type": "integer" },
    "elevation_min": { "type": "integer" },
    "elevation_up_snow": { "type": "integer" },
    "height_diff_difficulties": { "type": "integer" },
    "height_diff_down": { "type": "integer" },
    "height_diff_up": { "type": "integer" },
    "length_total": { "type": "integer" },
    "participant_count": { "type": "integer" },
    "disable_comments": { "type": "boolean" },
    "partial_trip": { "type": "boolean" },
    "public_transport": { "type": "boolean" },
    "access_condition": { "$ref": "/attributes/access_conditions.json" },
    "avalanche_signs": {
      "type": "array",
      "items": { "$ref": "/attributes/avalanche_signs.json" }
