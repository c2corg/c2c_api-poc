    "lift_status": { "$ref": "/attributes/lift_status.json" },
    "snow_quality": { "$ref": "/attributes/snow_quality_ratings.json" },
    "snow_quantity": { "$ref": "/attributes/snow_quantity_ratings.json" },
    "snowshoe_rating": { "$ref": "/attributes/snowshoe_ratings.json" },

    "type": { "const": "outing" }
  },
  "required": [
    "activities",
    "associations",
    "disable_comments",
    "date_end",
    "date_start",
    "locales",
    "quality",
    "type"
  ],
  "additionalProperties": false
