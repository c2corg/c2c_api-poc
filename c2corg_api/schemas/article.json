{
  "properties": {
    "type": { "const": "article" },
    "quality": { "$ref": "attributes/quality_types.json" },
    "locales": {
      "patternProperties": {
        "(fr|en)": {
          "type": "object",
          "properties": {
            "lang": { "$ref": "attributes/default_langs.json" },
            "title": { "type": "string" },
            "summary": { "type": "string" },
            "description": { "type": ["string", "null"] },
            "topic_id": { "type": ["integer", "null"] }
          },
          "required": ["lang", "title"],
          "additionalProperties": false
        }
      }
    },
    "author": {
      "type": "object",
      "properties": { "user_id": { "type": "integer" } },
      "required": ["user_id"],
      "additionalProperties": false
    },
    "associations": { "$ref": "entities/association_array.json" },
    "article_type": { "$ref": "attributes/article_types.json" },
    "activities": { "$ref": "entities/activity_array.json" },
    "categories": { "$ref": "entities/article_category_array.json" }
  },
  "required": ["locales", "type", "author", "associations", "activities", "categories", "article_type", "quality"],
  "additionalProperties": false
}
